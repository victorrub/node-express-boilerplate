{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "lib": ["ES6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": false,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "./src/types", "./src/domain/types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@data/*": ["./src/data/*"],
      "@domain/*": ["./src/domain/*"],
      "@services/*": ["./src/domain/services/*"],
      "@utils/*": ["./src/domain/utils/*"],
      "@infra/*": ["./src/infra/*"],
      "@server/*": ["./src/server/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./src/**/*.test.ts", "./src/**/*.spec.ts"]
}
